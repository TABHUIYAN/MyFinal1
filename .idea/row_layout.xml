<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="4dp"

    android:background="@drawable/ic_launcher_background">

    <TextView
        android:id="@+id/tx_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tx_address"
        android:text="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tx_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tx_number"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/tx_number"
        android:text="Name"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tx_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:layout_below="@id/tx_name"
        android:gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:layout_marginBottom="2dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        />
    <TextView
    android:id="@+id/tx_position"
    android:layout_below="@+id/tx_address"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="TAB"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />

    <TextView
        android:id="@+id/tx_position1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tx_banking"
        android:layout_below="@+id/tx_position"
        android:gravity="left"
        android:text="BTR"
        android:textAppearance="?android:textAppearanceMedium" />
    <TextView
    android:id="@+id/tx_banking"
    android:layout_below="@+id/tx_position1"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="RT"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />

    <TextView
    android:id="@+id/tx_bonus"
    android:layout_below="@+id/tx_banking"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ruby"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />

    <TextView
    android:id="@+id/tx_status"
    android:layout_below="@+id/tx_bonus"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ruby"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />

    <TextView
    android:id="@+id/tx_contract_name"
    android:layout_below="@+id/tx_status"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ruby"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />
    <TextView
    android:id="@+id/tx_bike_stands"
    android:layout_below="@+id/tx_contract_name"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ruby"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />


    <TextView
    android:id="@+id/tx_available_bike_stands"
    android:layout_below="@+id/tx_bike_stands"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ruby"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />
    <TextView
    android:id="@+id/tx_available_bikes"
    android:layout_below="@+id/tx_available_bike_stands"
    android:layout_marginBottom="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ruby"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />
    <TextView
    android:id="@+id/tx_last_update"
    android:layout_below="@+id/tx_available_bikes"
    android:layout_marginBottom="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ruby"
    android:gravity="left"
    android:layout_marginLeft="10dp"
    android:textAppearance="?android:textAppearanceMedium"
    />
</RelativeLayout>